<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:swipe="clr-namespace:Plugin.Maui.SwipeCardView;assembly=Plugin.Maui.SwipeCardView"
             x:Class="MauiSwipeCardViewSample.MainPage">

    <swipe:SwipeCardView ItemsSource="{Binding Monkeys}" Padding="30"
                         SupportedSwipeDirections="Left", Right>
        <swipe:SwipeCardView.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Image Source="{Binding Image}" Aspect="AspectFill" />
                    <Label Text="{Binding Name}" TextColor="White" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />
                </Grid>
            </DataTemplate>
        </swipe:SwipeCardView.ItemTemplate>
    </swipe:SwipeCardView>

</ContentPage>
